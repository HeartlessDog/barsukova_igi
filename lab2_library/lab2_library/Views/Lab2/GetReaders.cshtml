@model IEnumerable<libr.Models.Reader>
@{
    ViewData["Title"] = "Index";
}
<h2>Readers</h2>
    <img style="width:120px;" src="~/images/Picture.PNG" title="читатель">


    <form asp-controller="Lab2" asp-action="GetReaders">
        <p style="font-size:18px;">
            <b>Search by reader: </b> <input type="text" name="SearchString">
            <input class="btn btn-primary" type="submit" value="Filter" />

            <b>Search by year: </b>
            <select>
                @for (int i = 1950; i < 2010; i++)
                {
                    <option>@i</option>
                }
            </select>
            <input class="btn btn-primary" type="submit" value="Filter" />
        </p>
    </form>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PassportData)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PassportData)
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <div>
        LIST
        <ul>
            <li>1</li>
            <li>2</li>
            <li>3</li>
        </ul>
    </div>
